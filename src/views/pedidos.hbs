<div class="col-md-6 offset-md3">
    <div class="card">
        <div class="card-header">
            <h1>Proveedores</h1>
        </div>
        <div class="card-body">
            {{#if pedidos}}
            <ul class="list-group">
                {{#each pedidos}}
                <li class="list-group-item d-flex justify-content-between align-items-centers">
                   
                    {{id_detalle_pedido}}
                    {{id_pedido}} /
                    {{cantidad}} /
                    {{precio_unitario}} /
                    {{cantidad_recibida}} /
                    {{observacion}} 
                    <a href="/delete-pedidos/{{@key}}" class="btn btn-danger">
                        Eliminar
                    </a>
                </li>
                 {{/each}}
            </ul>
            
            {{else}}
            <p>No Pedidos</p>
            {{/if}}
        </div>
        <div class="card-footer">
            <form action="/new-pedidos" method="POST">
                <div class="form-group">
                    <input type="text" name="id_detalle_pedido" placeholder="Id detalle del pedido" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="id_pedido" placeholder="Id del pedido" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="cantidad" placeholder="Cantidad" class="form-control">
                </div>
                <div class="form-group">
                    <input type="tex" name="precio_unitario" placeholder="Precio por unidad" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="cantidad_recibida" placeholder="Cantidad recibida" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="observacion" placeholder="Observacion" class="form-control">
                </div>
                <button class="btn btn-primary btn-block">
                    Agregar
                </button>
            </form>
        </div>
    </div>
</div>
